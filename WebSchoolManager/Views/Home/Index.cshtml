@{
    ViewBag.Title = "Startseite";
}
<br />
<form action="/home/import" method="post" enctype="multipart/form-data">
    <input id="file" name="file" type="file" style="display:inline"/>
    <input type="submit" value="Schülerdaten importieren" class="btn btn-primary btn-sm" />
</form>
<br/>

<div>
    <label class="col-md-2">Klassen</label>
    <select id="selectForms" class="form-control col-md-8"></select>
</div>
<br/>

<table id="tablePupils" class="table table-hover table-condensed">
    <thead>
    <tr><th>Nachname</th><th>Vorname</th><th>Geburtstag</th><th>Geschlecht</th></tr>
    </thead>
    <tbody>

    </tbody>
</table>

<div id="formPupil" style="display: none">
    <br/>
    <hr/>
    <input id="pupilId" type="hidden" class="form-control" />
    <div class="form-group">
        <label class="control-label col-md-2">Vorname</label>
        <div class="col-md-10">
            <input id="firstname" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nachname</label>
        <div class="col-md-10">
            <input id="lastname" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Matrikelnummer</label>
        <div class="col-md-10">
            <input id="matrikelNo" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Geschlecht</label>
        <div class="col-md-10">
            <input id="sex" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Geburtstag</label>
        <div class="col-md-10">
            <input id="birthday" type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Klasse</label>
        <div class="col-md-10">
            <input id="form" type="text" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <button id="backButton" class="btn btn-primary btn-sm">Zurück</button>
        <button id="saveButton" class="btn btn-primary btn-sm">Speichern</button>
    </div>
</div>


